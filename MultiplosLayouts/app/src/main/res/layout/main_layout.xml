<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_activity">

    <RelativeLayout
     android:layout_width= "match_parent"
     android:layout_height= "match_parent"
     android:layout_marginTop="40dp"
     tools:ignore="MissingConstraints">

        <!---O arquivo "ic_launcher.png" com a imagem idêntica ao do protótipo,
        citado na etapa 3 da oficina, não se encontra no diretório "res/drawable"
        do projeto padrão. Por esse motivo usei uma imagem similar neste exercício.-->

        <ImageView
            android:id= "@+id/imageRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop= "true"
            android:src= "@drawable/android" />

        <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="40dp"
         android:layout_below="@+id/imageRelative" >

            <ImageView
                android:id="@+id/imageLinear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android" />

            <ImageView
                android:id="@+id/imageLinear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android" />

            <ImageView
                android:id="@+id/imageLinear3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android" />

        </LinearLayout>

     </RelativeLayout >

</androidx.constraintlayout.widget.ConstraintLayout>